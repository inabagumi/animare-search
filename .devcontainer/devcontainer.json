{
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "bradlc.vscode-tailwindcss@prerelease",
        "esbenp.prettier-vscode",
        "unifiedjs.vscode-mdx"
      ],
      "settings": {}
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "terragrunt": "none",
      "tflint": "none",
      "version": "1.6.4"
    }
  },
  "forwardPorts": [3000, 4000],
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bookworm",
  "name": "SHINJU DATE",
  "portsAttributes": {
    "3000": {
      "label": "Web",
      "onAutoForward": "silent"
    },
    "4000": {
      "label": "Admin",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "sudo npm uninstall -g pnpm && sudo sh -c 'COREPACK_ENABLE_DOWNLOAD_PROMPT=0 corepack enable' && pnpm install && pnpm build --filter={./packages/*}...",
  "waitFor": "postCreateCommand"
}
